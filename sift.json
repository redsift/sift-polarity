{
  "name": "sift-polarity",
  "display-name": "Polarity Sift",
  "subtitle": "Never miss the important threads",
  "description": "Flag email threads that express highly polar sentiment.",
  "author": "Rahul Powar",
  "version": "1.0.0",
  "icon": "assets/icon.svg",
  "marketing": {
    "screenshots": [
      "assets/screenshot-0.png"
    ],
    "links": [
      {
        "label": "Github",
        "type": "github",
        "url": "https://github.com/redsift/sift-polarity"
      }
    ]
  },  
  "interfaces": {
    "email": {
      "thread" : {
        "controller": "dist/js/controller.umd-es2015.js"
      },
      "client" : {
        "controller": "dist/js/email-client-controller.umd-es2015.js"
      }
    },
    "summary": {
      "controller": "dist/js/controller.umd-es2015.js"
    }
  },
  "dag": {
    "inputs":{
      "emails":{
        "gmailEmails":{
          "filter":{
            "conditions":[{
              "date": "between now and 1 month before now"
            }]
          },
          "wants": [
            "archive",
            "textBody",
            "strippedHtmlBody"
          ]
        }
      }
    },
    "nodes":[{
      "implementation": {
        "python": "server/classify.py",
        "sandbox": "quay.io/redsift/sandbox-scipy:v3"
      },
      "input": {
        "bucket": "gmailEmails"
      },
      "outputs": {
        "threads": {}
      }
    }],
    "stores": {

    },
    "outputs":{
      "exports":{
        "threads": {
          "import": "_email.tid"
        }
      }
    }
  }
}
