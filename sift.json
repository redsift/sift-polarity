{
  "name": "sift-polarity",
  "display-name": "Sift Polarity",
  "description": "",
  "author": "",
  "version": "1.0.0",
  "color": "#35355C",
  "image": "https://static.redsift.io/assets/sifts/template/template.jpg",
  "icon": "https://static.redsift.io/assets/sifts/template/blueprint.svg",
  "interfaces": {
    "email": {
      "thread" : {
        "controller": "dist/js/controller.umd-es2015.js"
      },
      "client" : {
        "controller": "dist/js/email-client-controller.umd-es2015.js"
      }
    },
    "summary": {
      "controller": "dist/js/controller.umd-es2015.js"
    }
  },
  "dag": {
    "inputs":{
      "emails":{
        "gmailEmails":{
          "filter":{
            "conditions":[{
              "date": "between now and 1 month before now"
            }],
            "wants": [
              "archive",
              "textBody",
              "strippedHtmlBody"
            ]
          }
        }
      }
    },
    "nodes":[{
      "implementation": {
        "python": "server/classify.py",
        "sandbox": "quay.io/redsift/sandbox-scipy:v3"
      },
      "input": {
        "bucket": "gmailEmails"
      },
      "outputs": {
        "count": {},
        "threads": {}
      }
    }],
    "stores": {

    },
    "outputs":{
      "exports":{
        "count" : {
          "key$schema":"string"
        },
        "threads": {
          "import": "_email.tid"
        }
      }
    }
  }
}
